<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="horizontal">

	<ImageView android:id="@+id/icon" android:layout_height="wrap_content"
		android:src="@drawable/user" android:layout_width="60px"
		android:layout_marginTop="3px" android:layout_marginRight="3px"
		android:layout_marginLeft="3px">
	</ImageView>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:orientation="vertical">
		
		<TextView android:text="@+id/TextView01"
			android:layout_width="185px" android:layout_height="wrap_content"
			android:id="@+id/label" android:textSize="14px" android:textColor="#ffa500"
			android:textStyle="bold" android:paddingTop="10px">
		</TextView>

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:orientation="horizontal">
			
			<ImageView android:id="@+id/icon" android:layout_height="wrap_content"
				android:src="@drawable/calendar_icon" android:layout_width="28px">
			</ImageView>

			<TextView android:text="@+id/TextView02"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:id="@+id/label2" android:textStyle="bold" android:textSize="12px"
				android:paddingTop="3px" android:textColor="#ffffff">
			</TextView>
			
		</LinearLayout>
	</LinearLayout>

	<ImageView android:id="@+id/icon" android:layout_height="28px"
		android:src="@drawable/message_forward" android:layout_width="28px"
		android:layout_marginTop="12px">
	</ImageView>
	
</LinearLayout>